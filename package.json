{
  "name": "mern-auth",
  "version": "1.0.0",
  "type": "module",
  "description": "MERN authentication system",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "npm run start --prefix frontend",
    "python-service": "node backend/start_python_service.js",
    "dev": "concurrently \"npm run python-service\" \"npm run server\" \"npm run client\"",
    "seed": "node backend/seed.js",
    "build": "npm install && npm install --prefix frontend && npm run build:win --prefix frontend",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend"
  },
  "author": "Brad Traversy",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/vite": "^4.1.13",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.1.0",
    "react-bootstrap": "^2.10.10",
    "react-router-dom": "^7.8.2",
    "react-scripts": "^5.0.1",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "html-webpack-plugin": "^5.6.4",
    "nodemon": "^3.1.10"
  }
}
